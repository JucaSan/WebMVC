@model ProjectModel.Entities.Contrarecibo
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="~/CSS/StyleSheet1.css" type="text/css" rel="stylesheet" />
</head>
<body>
    <div class="bg-primary bg-gradient">
        <nav class="navigation container">

            <a href="@Url.Action("Mostrar", "Material")">Materiales</a>
            <a href="@Url.Action("Mostrar", "CategoriaMaterial")">Categoria</a>
            <a href="@Url.Action("Mostrar","contrarecibo")">Contrarecibo</a>
            <a href="@Url.Action("Mostrar","detalleContrarecibo")">DetalleContrarecibo</a>
        </nav>
    </div>


    <div class="container">

        <form action="@Url.Action("Editar", "contrarecibo")" method="post">
            <h1>Modificando el Contrarrecibo con el ID:</h1>
            <input type="number" value="@ViewBag.id" name="ID" />

            <div class="form-group">
                <label>Fecha: </label>
                <input type="date" name="txtfecha" class="form-control" value="@Model.fecha" />
            </div>
            <div class="form-group">
                <label>Numero de Obra: </label>
                <input type="number" name="txtobra" class="form-control" value="@Model.obra" />
            </div>

            <div class="form-group">
                <label>Extra: </label>
                <input type="text" name="txtExt" class="form-control" value="@Model.extra" />
            </div>

            <input type="submit" value="Modificar Contrarecibo" class="btn btn-primary" />

        </form>

    </div>
</body>
</html>
