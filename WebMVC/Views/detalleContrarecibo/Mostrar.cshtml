@model IEnumerable<ProjectModel.Entities.detalleContrarecibo>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Mostrar</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="~/CSS/StyleSheet1.css" type="text/css" rel="stylesheet" />

</head>
<body>
    <div class="bg-primary bg-gradient">
        <nav class="navigation container">

            <a href="@Url.Action("Mostrar", "Material")">Materiales</a>
            <a href="@Url.Action("Mostrar", "CategoriaMaterial")">Categoria</a>
            <a href="@Url.Action("Mostrar","contrarecibo")">Contrarecibo</a>
            <a href="@Url.Action("Mostrar","detalleContrarecibo")">DetalleContrarecibo</a>
        </nav>
    </div>
    <div class="container">
        <h1>DETALLE DE CONTRARECIBO</h1>
        <a href="@Url.Action("Create", "detalleContrarecibo")" class="btn btn-success">Agregar Detalle</a>

    </div>
    <table class="table table-striped container">

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.contrarecibo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fecha_recibo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.obra)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nota)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fecha_nota)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.total)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.pagada)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.contrarecibo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fecha_recibo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.obra)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nota)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fecha_nota)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.total)
                </td>
                <td>
                    @if (int.Parse(item.pagada) == 1)
                    {
                        <text>pagado</text>
                    }
                    else if (int.Parse(item.pagada) == 0)
                    {
                        <text>no pagado</text>
                    }
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.id }, new { @class = "btn btn-warning" }) |
                    @Html.ActionLink("Eliminar", "Eliminar", new { id = item.id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
</body>
</html>
