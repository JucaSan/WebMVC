@model IEnumerable<ProjectModel.Entities.Material>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Mostrar</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="~/CSS/StyleSheet1.css" type="text/css" rel="stylesheet" />

</head> 
<body>
    <div class="bg-primary bg-gradient">
        <nav class="navigation container">

            <a href="@Url.Action("Mostrar", "Material")">Materiales</a>
            <a href="@Url.Action("Mostrar", "CategoriaMaterial")">Categoria</a>
            <a href="@Url.Action("Mostrar","contrarecibo")">Contrarecibo</a>
            <a href="@Url.Action("Mostrar","detalleContrarecibo")">DetalleContrarecibo</a>
        </nav>
    </div>
    <div class="container">
        <h1>MATERIALES</h1>
        <a href="@Url.Action("Create", "Material")" class="btn btn-success">Agregar Material</a>

    </div>
    <table class="table table-striped container">

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Idmaterial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreMat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnidadMedida)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Idmaterial)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreMat)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Marca)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Categoria)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnidadMedida)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Idmaterial }, new { @class = "btn btn-warning" }) |
                    @Html.ActionLink("Eliminar", "Eliminar", new { id=item.Idmaterial}, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
</body>
</html>
