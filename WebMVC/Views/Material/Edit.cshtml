@model ProjectModel.Entities.Material

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="~/CSS/StyleSheet1.css" type="text/css" rel="stylesheet" />
</head>
<body>

    <div class="bg-primary bg-gradient">
        <nav class="navigation container">

            <a href="@Url.Action("Mostrar", "Material")">Materiales</a>
            <a href="@Url.Action("Mostrar", "CategoriaMaterial")">Categoria</a>
            <a href="@Url.Action("Mostrar","contrarecibo")">Contrarecibo</a>
            <a href="@Url.Action("Mostrar","detalleContrarecibo")">DetalleContrarecibo</a>
        </nav>
    </div>


    <div class="container">

        <form action="@Url.Action("Editar", "Material")" method="post">
            <h1>Modificando el Material con el ID:</h1>
            <input type="number" value="@ViewBag.id" name="ID" />

            <div class="form-group">
                <label>Nombre del Material: </label>
                <input type="text" name="txtNom" class="form-control" value="@Model.NombreMat" />
            </div>

            <div class="form-group">
                <label>Marca: </label>
                <input type="text" name="txtMar" class="form-control"  value="@Model.Marca"/>
            </div>

            <div class="form-group">
                <label>Categoria: </label>
                @Html.DropDownList("txtCat", (List<SelectListItem>)ViewBag.listaDrop, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label>Unidad de Medida: </label>
                <input type="text" name="txtUni" class="form-control" value="@Model.UnidadMedida"/>
            </div>

            <input type="submit" value="Modificar Material" class="btn btn-primary" />

        </form>

    </div>

</body>
</html>
