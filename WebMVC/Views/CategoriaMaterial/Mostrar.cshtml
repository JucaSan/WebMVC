@model IEnumerable<ProjectModel.Entities.CategoriaMaterial>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Mostrar</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="~/CSS/StyleSheet1.css" type="text/css" rel="stylesheet" />
</head>
<body>
    <div class="bg-primary bg-gradient">
        <nav class="navigation container">

            <a href="@Url.Action("Mostrar", "Material")">Materiales</a>
            <a href="@Url.Action("Mostrar", "CategoriaMaterial")">Categoria</a>
            <a href="@Url.Action("Mostrar","contrarecibo")">Contrarecibo</a>
            <a href="@Url.Action("Mostrar","detalleContrarecibo")">DetalleContrarecibo</a>
        </nav>
    </div>
    <div class="container">
        <h1>CATEGORIAS</h1>
        <a href="@Url.Action("Create", "CategoriaMaterial")" class="btn btn-success">Agregar Categoria</a>

    </div>
    <table class="table container table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.idCategoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nomCategoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.extra)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.idCategoria)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nomCategoria)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.extra)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.idCategoria }, new { @class = "btn btn-warning" }) |
                    @Html.ActionLink("Eliminar", "Eliminar", new { id=item.idCategoria}, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
</body>
</html>
